# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safedocs_rwanda
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=change-me-to-a-strong-random-secret-before-deploy
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Scanning/processing
CONVERT_IMAGES_TO_PDF=true
OCR_ENABLED=false
OCR_ENDPOINT=
OCR_API_KEY=

# MinIO Configuration (Object Storage)
# Set USE_MINIO=true to enable MinIO storage, false to use local file system
USE_MINIO=false
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=safedocs

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS KMS Encryption
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_KMS_KEY_ID=your_kms_key_id_or_arn

# VirusTotal Malware Scanning
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Email / SMTP Configuration (Nodemailer)
# Leave SMTP_HOST blank to use console logging in development
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASS=yourpassword
SMTP_FROM=SafeDocs Rwanda <noreply@safedocs.rw>

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_UPLOAD_WINDOW_MS=3600000
RATE_LIMIT_UPLOAD_MAX_REQUESTS=10
RATE_LIMIT_SHARE_WINDOW_MS=3600000
RATE_LIMIT_SHARE_MAX_REQUESTS=20
